= form_for @procategory do |f|
  - if @procategory.errors.any?
    #error_explanation
      %h2= "#{pluralize(@procategory.errors.count, "error")} prohibited this procategory from being saved:"
      %ul
        - @procategory.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :ddc
    = f.text_field :ddc
  .field
    = f.label :status
    = f.check_box :status
  .actions
    = f.submit 'Save'
