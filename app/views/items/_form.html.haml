= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :invoice_id
    = f.number_field :invoice_id
  .field
    = f.label :project_id
    = f.number_field :project_id
  .actions
    = f.submit 'Save'
